{% if units == "lb" %}
{{ form_widget(form.weight) }} {{ form_label(form.weight) }}
{% elseif units == "kg" %}
{{ form_widget(form.weight) }} {{ form_label(form.weight) }}
{% else %}
<p>Select weight units.</p>
{% endif %}
</div>
{% endspaceless %}
{% endblock %}

